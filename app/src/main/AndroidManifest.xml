<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.apps.szpansky.concat">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.apps.szpansky.concat.MainActivity"
            android:label="ConCat">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.apps.szpansky.concat.for_pick.PickPerson"
            android:label="@string/pick_person"
            android:launchMode="singleTop"
            android:parentActivityName="com.apps.szpansky.concat.main_browsing.ClientsActivity"
            android:theme="@style/PickTheme"
            tools:targetApi="jelly_bean" />
        <activity
            android:name="com.apps.szpansky.concat.for_pick.PickItem"
            android:label="@string/pick_item"
            android:launchMode="singleTop"
            android:parentActivityName="com.apps.szpansky.concat.main_browsing.OrdersActivity"
            android:theme="@style/PickTheme"
            tools:targetApi="jelly_bean" />
        <activity
            android:name="com.apps.szpansky.concat.open_all.OpenAllCatalogsActivity"
            android:label="@string/catalogs"
            android:launchMode="singleTop"
            android:parentActivityName="com.apps.szpansky.concat.MainActivity"
            tools:targetApi="jelly_bean" />
        <activity
            android:name="com.apps.szpansky.concat.open_all.OpenAllPersonsActivity"
            android:label="@string/contacts"
            android:launchMode="singleTop"
            android:parentActivityName="com.apps.szpansky.concat.MainActivity"
            tools:targetApi="jelly_bean" />
        <activity
            android:name="com.apps.szpansky.concat.open_all.OpenAllItemsActivity"
            android:label="@string/items"
            android:launchMode="singleTop"
            android:parentActivityName="com.apps.szpansky.concat.MainActivity"
            tools:targetApi="jelly_bean" />
        <activity
            android:name="com.apps.szpansky.concat.add_edit.AddEditCatalogActivity"
            android:label="@string/add_or_edit"
            android:launchMode="singleTop"
            android:parentActivityName="com.apps.szpansky.concat.open_all.OpenAllCatalogsActivity"
            tools:targetApi="jelly_bean" />
        <activity
            android:name="com.apps.szpansky.concat.add_edit.AddEditPersonActivity"
            android:label="@string/add_or_edit"
            android:launchMode="singleTop"
            android:parentActivityName="com.apps.szpansky.concat.open_all.OpenAllPersonsActivity"
            tools:targetApi="jelly_bean" />
        <activity
            android:name="com.apps.szpansky.concat.add_edit.AddEditItemsActivity"
            android:label="@string/add_or_edit"
            android:launchMode="singleTop"
            android:parentActivityName="com.apps.szpansky.concat.open_all.OpenAllItemsActivity"
            tools:targetApi="jelly_bean" />
        <activity
            android:name="com.apps.szpansky.concat.main_browsing.CatalogsActivity"
            android:label="@string/catalogs"
            android:launchMode="singleTop"
            android:parentActivityName="com.apps.szpansky.concat.MainActivity"
            android:theme="@style/BrowsingTheme"
            tools:targetApi="jelly_bean" />
        <activity
            android:name="com.apps.szpansky.concat.main_browsing.ClientsActivity"
            android:label="@string/browsing"
            android:launchMode="singleTop"
            android:parentActivityName="com.apps.szpansky.concat.main_browsing.CatalogsActivity"
            android:theme="@style/BrowsingTheme"
            tools:targetApi="jelly_bean" />
        <activity
            android:name="com.apps.szpansky.concat.main_browsing.OrdersActivity"
            android:label="@string/browsing"
            android:launchMode="singleTop"
            android:parentActivityName="com.apps.szpansky.concat.main_browsing.ClientsActivity"
            android:theme="@style/BrowsingTheme"
            tools:targetApi="jelly_bean" />
        <activity android:name="com.apps.szpansky.concat.SettingsActivity" />
        <activity
            android:name="com.apps.szpansky.concat.HelpAndOpinionActivity"
            android:label="@string/help_opinion"
            android:parentActivityName="com.apps.szpansky.concat.main_browsing.ClientsActivity"
            tools:targetApi="jelly_bean" />
    </application>

</manifest>