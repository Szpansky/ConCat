<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:drawable/editbox_background_normal"
    android:descendantFocusability="blocksDescendants">

    <Button
        android:id="@+id/listItem_delete_button"
        style="@style/Widget.AppCompat.Button.Small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:drawable/ic_menu_delete"
        android:backgroundTint="@color/redPrimary_dark"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <LinearLayout
        android:id="@+id/asd1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/listItem_delete_button"
        android:layout_toStartOf="@+id/listItem_delete_button"
        android:orientation="vertical">

        <TextView
            android:id="@+id/item_personName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="sans-serif"
            android:text="@string/error"
            android:textSize="@dimen/default_sub_text_size"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/item_personSurname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="sans-serif"
            android:text="@string/error"
            android:textSize="@dimen/default_sub_text_size"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout9"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/asd1"
        android:layout_marginTop="@dimen/default_text_margin"
        android:gravity="start"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/item_personAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:text="@string/error"
            android:textSize="@dimen/default_sub_text_size"
            android:textStyle="italic" />
    </LinearLayout>


</RelativeLayout>